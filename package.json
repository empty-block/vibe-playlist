{
  "name": "vibes-playlist",
  "version": "2.0.0",
  "description": "Retro-themed music playlist SPA with vanilla JS and Bun server",
  "type": "module",
  "scripts": {
    "postinstall": "cd web-app && bun install && cd ../mini-app && bun install && cd ../backend && bun install",
    "dev": "cd web-app && bun run dev",
    "dev:web": "cd web-app && bun run dev",
    "dev:miniapp": "(cd mini-app && bun run dev) & (cd backend && bun run dev)",
    "dev:server": "cd backend && bun run dev",
    "dev:full": "bun run dev:web & bun run dev:server",
    "build": "cd web-app && bun run build",
    "build:web": "cd web-app && bun run build",
    "build:miniapp": "cd mini-app && bun run build",
    "preview": "cd web-app && bun run preview",
    "start": "bun run backend/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "data:install": "arch -arm64 ./venv/bin/pip install -r requirements-fixed.txt",
    "data:run": "cd data/pipelines && PYTHONPATH=/Users/nmadd/Dropbox/code/vibes/vibes-playlist POLARS_SKIP_CPU_CHECK=1 arch -arm64 ../../venv/bin/python -m flow",
    "data:import": "cd data/pipelines/data_importer && PYTHONPATH=/Users/nmadd/Dropbox/code/vibes/vibes-playlist arch -arm64 ../../../venv/bin/python -m flow",
    "data:parser": "cd data/pipelines/cast_music_parser && PYTHONPATH=/Users/nmadd/Dropbox/code/vibes/vibes-playlist arch -arm64 ../../../venv/bin/python -m flow",
    "data:graph": "cd data/pipelines/graph_analysis && PYTHONPATH=/Users/nmadd/Dropbox/code/vibes/vibes-playlist arch -arm64 ../../../venv/bin/python -m flow",
    "deploy": "./deploy-all.sh",
    "deploy:backend": "./deploy-backend.sh",
    "deploy:miniapp": "./deploy-miniapp.sh",
    "backfill": "bun run backend/scripts/backfill-channel.ts"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^2.0.0",
    "bun-types": "^1.3.1"
  },
  "dependencies": {}
}
